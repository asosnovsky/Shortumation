{
  "include": ["src/**/*"],
  "compilerOptions": {
      "target": "es5",
      "jsx": "react-jsx",
      "module": "commonjs",
      "noImplicitThis": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "pretty": true,
      "sourceMap": true,
      "rootDir": ".",
      "baseUrl": "./src",
      "allowJs": false,
      "lib": [
          "es6", "dom", "es2017"
      ],
      "paths": {
          "~/*": ["./*"]
      }
  }
}